<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="header-banner" style="background-image: linear-gradient(-225deg, rgba(69, 67, 57, 0.6) 0%, rgba(37, 37, 31, 0.6) 50%), url('<%= cl_image_path @cocktail.photo.path %>'); background-position: center; background-size: cover;">
        <div class="header-content">
          <% if @cocktail.photo? %>
            <%= cl_image_tag @cocktail.photo.path, width: 200, height: 200, crop: :fill, class: "header-img"%>
          <% end %>
          <h1 class="header-name"><%= @cocktail.name %></h1>
        </div>
      </div>
      <h3>Ingredients</h3>
      <ul class="list-unstyled">
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> of <%= dose.ingredient.name.downcase %> <%= link_to "<i class='fa fa-close'></i>".html_safe, dose_path(dose), class: "btn-x", method: :delete, data: { confirm: "Are you sure?"} %></li>
        <% end %>
      </ul>
      <h4>Add a doses:</h4>
      <%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
</div>

