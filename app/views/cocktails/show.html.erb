<% if @product.photo? %>
  <%= cl_image_tag @product.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>
<h1><%= @cocktail.name %></h1>
<h2>To recreate this delicious drink you will need</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name.downcase %> <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %></li>
  <% end %>
</ul>
<h4>Add a doses:</h4>
<%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
