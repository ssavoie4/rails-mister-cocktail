<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="content-header text-center">
        <% if @cocktail.photo? %>
          <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill%>
        <% end %>
        <h1><%= @cocktail.name %></h1>
      </div>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> of <%= dose.ingredient.name.downcase %> <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %></li>
        <% end %>
      </ul>
      <h4>Add a doses:</h4>
      <%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
</div>

